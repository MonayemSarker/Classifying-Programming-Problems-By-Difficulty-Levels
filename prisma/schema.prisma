generator client {
  provider = "prisma-client-js"
  // previewFeatures = ["mongodb"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model users {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  email        String   @unique
  password     String
  username     String
  name         String
  refreshToken String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model problemSets {
  id               String   @id @default(auto()) @map("_id") @db.ObjectId
  name             String
  uploader_user_id String   @db.ObjectId
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

model problems {
  id               String   @id @default(auto()) @map("_id") @db.ObjectId
  problemSet_id    String?  @db.ObjectId
  uploader_user_id String   @db.ObjectId
  description      String
  code             String
  initial_score    Int
  ranked_score     Int?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

model participants {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  email       String   @unique
  name        String
  designation String
  location    String
  institution String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model surveys {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  name           String
  problemSet_ids String[] @db.ObjectId
  created_by     String   @db.ObjectId
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model surveyParticipants {
  id             String  @id @default(auto()) @map("_id") @db.ObjectId
  survey_id      String
  participant_id String
  survey_code    String
  mail_sent      Boolean
}

model surveyDetails {
  id                    String   @id @default(auto()) @map("_id") @db.ObjectId
  surveyParticipants_id String
  problem_1_id          String
  problem_2_id          String
  difficult_problem_id  String
  createdAt             DateTime @default(now())
}
